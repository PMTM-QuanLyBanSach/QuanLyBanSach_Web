@model QuanLyBanSach_Web.Models.GioHang
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

@using (Html.BeginForm("Delete", "Cart", FormMethod.Post))
{
    @Html.TextBoxFor(t => t.Sach.MaSach, new { Value = Model.Sach.MaSach, style = "display: none;" })
    <div class="row w-25 mx-auto">
        <table class="table">
            <tr>
                <th>Name</th>
            </tr>
            <tr>
                <td>@Model.Sach.TenSach</td>
            </tr>
        </table>
    </div>
    <div class="row w-25 mx-auto mt-3">
        <div class="col-md-3"></div>
        <div class="col-md-8">
            <a href="/Cart" class="btn btn-outline-secondary">Cancel</a>
            <button class="btn btn-light" type="submit">Delete</button>
        </div>
    </div>
}

